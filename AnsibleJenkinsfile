pipeline {
    agent {
        label "builder"
    }

    environment {
        BUCKET_NAME = "project-2.k8s.local"
        CLUSTER_NAME = "project-2-k8-bucket"
        ANSIBLE_DIR = "ansible"  // Defined as variable for reuse
    }

    stages {
        stage('Install Kubernetes Tools') {
            steps {
                script {
                    echo "üöÄ Installing Kubernetes tools..."
                    sh """
                    cd ${ANSIBLE_DIR}
                    ansible-playbook -i inventory/hosts.ini playbooks/install_kubernetes.yml -v
                    """
                }
            }
        }

        stage('Create Cluster') {
            steps {
                script {
                    echo "üõ†Ô∏è Creating Kubernetes cluster..."
                    sh """
                    cd ${ANSIBLE_DIR}
                    ansible-playbook -i inventory.ini playbooks/create_bucket.yml -v
                    """
                }
            }
        }

        stage('Validate Cluster') {
            steps {
                script {
                    echo "üîç Validating cluster setup..."
                    sh """
                    cd ${ANSIBLE_DIR}
                    ansible-playbook -i inventory.ini playbooks/validate_cluster.yml -v
                    """
                }
            }
        }
    }

