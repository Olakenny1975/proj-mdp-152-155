pipeline {
    agent {
        label "builder"
    }

    environment {
        BUCKET_NAME = "project-2.k8s.local"
        CLUSTER_NAME = "project-2-k8-bucket"
        ANSIBLE_DIR = "ansible"
    }

    stages {
        stage('Install Kubernetes Tools') {
            steps {
                script {
                    echo "Installing Kubernetes tools..."
                    sh """
                    cd ${ANSIBLE_DIR}
                    ansible-playbook -i inventory/hosts.ini playbooks/install_kubernetes.yml
                    """
                }
            }
        }

        stage('Create Cluster') {
            steps {
                script {
                    echo "Creating Kubernetes cluster..."
                    sh """
                    cd ${ANSIBLE_DIR}
                    ansible-playbook -i inventory.ini playbooks/create_bucket.yml
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed with status: ${currentBuild.currentResult}"
        }
    }
}